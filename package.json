{
  "name": "uneven-app",
  "description": "Web app that lets you track shared expenses, using React/Redux and PouchDB/CouchDB",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xMartin/grouptabs.git"
  },
  "author": "xMartin <xmartin@siarp.de>",
  "bugs": {
    "url": "https://github.com/xMartin/grouptabs/issues"
  },
  "homepage": "https://getuneven.com/",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "husky install",
    "dev": "VITE_APP_VERSION=${VITE_APP_VERSION:-`git describe HEAD`} vite",
    "build": "tsc && VITE_APP_VERSION=${VITE_APP_VERSION:-`git describe HEAD`} vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "VITE_APP_VERSION=${VITE_APP_VERSION:-`git describe HEAD`} vite preview",
    "test": "LC_ALL=en_US vitest",
    "test:ui": "LC_ALL=en_US vitest --ui",
    "type-check": "tsc"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5",
    "@testing-library/react": "^14.1.2",
    "@types/lodash": "^4.14.201",
    "@types/node": "^20.10.0",
    "@types/pouchdb": "^6.4.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-test-renderer": "^18.0.7",
    "@types/redux-first-router": "^2.1.7",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/ui": "^0.34.6",
    "debug": "^4.3.2",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "events": "^3.3.0",
    "husky": "^7.0.4",
    "jsdom": "^22.1.0",
    "lint-staged": "^12.5.0",
    "lodash": "^4.17.21",
    "pouchdb-adapter-memory": "^8.0.1",
    "pouchdb-browser": "^8.0.1",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.0",
    "react-test-renderer": "^18.2.0",
    "redux": "^4.2.0",
    "redux-first-router": "^2.1.5",
    "redux-thunk": "^2.4.0",
    "reselect": "^4.1.2",
    "typescript": "^5.0.2",
    "uuid": "^9.0.0",
    "vite": "^5.0.2",
    "vite-plugin-pwa": "^0.17.0",
    "vitest": "^0.34.6"
  },
  "license": "GPL-3.0",
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "README.md": [
      "prettier --write"
    ],
    "release-notes.yml": [
      "prettier --write"
    ]
  }
}
